{
  "name": "@passport/passport-account-ui",
  "version": "999.0.0-SNAPSHOT",
  "type": "module",
  "main": "lib/passport-account-ui.js",
  "types": "./lib/passport-account-ui.d.ts",
  "exports": {
    ".": {
      "import": "./lib/passport-account-ui.js",
      "types": "./lib/passport-account-ui.d.ts"
    }
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "wireit",
    "build": "wireit",
    "build-lib": "wireit",
    "preview": "wireit",
    "lint": "wireit",
    "test": "wireit"
  },
  "dependencies": {
    "@passport/passport-ui-shared": "workspace:*",
    "@patternfly/patternfly": "^5.4.2",
    "@patternfly/react-core": "^5.4.14",
    "@patternfly/react-icons": "^5.4.2",
    "@patternfly/react-table": "^5.4.16",
    "i18next": "^25.7.3",
    "i18next-fetch-backend": "^7.0.0",
    "keycloak-js": "^26.2.2",
    "lodash-es": "^4.17.23",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.70.0",
    "react-i18next": "^16.5.1",
    "react-router-dom": "^6.30.2"
  },
  "devDependencies": {
    "@passport/passport-admin-client": "workspace:*",
    "@playwright/test": "^1.57.0",
    "@types/lodash-es": "^4.17.12",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "cross-env": "^10.1.0",
    "lightningcss": "^1.30.2",
    "vite": "^7.3.0",
    "vite-plugin-checker": "^0.12.0",
    "vite-plugin-dts": "^4.5.4"
  },
  "wireit": {
    "dev": {
      "command": "vite --host",
      "dependencies": [
        "../../libs/ui-shared:build",
        "../../libs/passport-admin-client:build"
      ]
    },
    "preview": {
      "command": "vite preview",
      "dependencies": [
        "../../libs/ui-shared:build",
        "../../libs/passport-admin-client:build"
      ]
    },
    "build": {
      "command": "vite build",
      "dependencies": [
        "../../libs/ui-shared:build",
        "../../libs/passport-admin-client:build"
      ],
      "files": [
        "public",
        "src",
        "tsconfig.json",
        "vite.config.ts"
      ],
      "output": [
        "target/classes/theme/passport.v3/account/resources"
      ]
    },
    "build-lib": {
      "command": "cross-env LIB=true vite build",
      "dependencies": [
        "../../libs/ui-shared:build",
        "../../libs/passport-admin-client:build"
      ]
    },
    "lint": {
      "command": "eslint .",
      "dependencies": [
        "../../libs/ui-shared:build",
        "../../libs/passport-admin-client:build"
      ]
    },
    "test": {
      "command": "playwright test",
      "dependencies": [
        "../../libs/passport-admin-client:build"
      ]
    }
  },
  "author": {
    "name": "Red Hat, Inc.",
    "url": "https://www.passport-pro.ai/"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/passport/passport.git",
    "directory": "js/apps/account-ui"
  },
  "homepage": "https://www.passport-pro.ai/"
}
